<script>
  const elm = {};
  const stamp = "../../images/stamp.png";
  const transparent = "../../images/transparent.png";
  function toggle(p) {
    // console.log("test 1 ", elm[p].src);
    if (localStorage.getItem(p) != transparent) {
      localStorage.setItem(p, transparent);
    } else {
      localStorage.setItem(p, stamp);
    }
    elm[p].src = localStorage.getItem(p);
    // console.log("test 2 ", elm[p].src);
  }
  function setup(p) {
    // console.log(localStorage.getItem(p));
    if (!localStorage.getItem(p)) {
      localStorage.setItem(p, transparent);
    }
    elm[p] = document.getElementById(p);
    elm[p].addEventListener("click", () => toggle(p));
    elm[p].src = localStorage.getItem(p);
  }
  window.addEventListener("DOMContentLoaded", main);
  function main() {
    setup("c1");
    setup("c2");
    setup("c3");
    setup("c4");
    setup("c5");
    setup("c6");
    setup("c7");
    setup("c8");
  }
</script>
